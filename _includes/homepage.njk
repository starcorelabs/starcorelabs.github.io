<!-- homepage.njk -->
{% extends "base.njk" %}

{% block pageHeader %}
<!-- pageHeader -->
<header>
  <div class="header-content">
    <div class="header-content-inner">
      <h1><img src="{{ 'assets/img/website-logo.png' | url }}"> STARCORE LABS</h1>
      <hr>
      <p>{{ description }}</p>
      <a href="{{ buttonurl }}" class="btn btn-primary btn-xl page-scroll">{{ buttontext }}</a>
    </div>
  </div>
</header>
<!-- end pageHeader -->
{% endblock pageHeader %}

{% block about %}
<!-- about-->
<section class="bg-primary" id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-faded-extra">
        <h2 class="section-heading">About</h2>
        <div>
          <img src="assets/img/clean_headshot.png" alt="Michael Douglas" class="img-responsive michael-headshot">
        </div>
        <p>Hello, I'm Michael.</p>
        <p>UX/UI Designer and Developer with 8 years of experience working in corporate environments.<br />
          With 5 years of experience freelancing.</p>

        <p>I've worked on many types of projects. From large scale eCommerce and corporate web applications. To static
          sites, and single landing pages.</p>

        <p>My focus is on creating beautiful, easy to use, user interfaces for web applications.<br />
          I'm always experimenting and learning something new.</p>

        <p>Hire me for your Web Design and Development projects!</p>
      </div>
    </div>
  </div>
</section>
<aside class="bg-dark">
  <div class="container text-center">
    <div class="call-to-action">
      <a href="/hire" class="btn btn-primary btn-xl">Hire</a>
    </div>
  </div>
</aside>
<!-- end about -->
{% endblock about %}

