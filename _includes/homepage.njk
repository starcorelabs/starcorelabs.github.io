<section class="no-padding" id="portfolio">
  <div class="container-fluid">
    <div class="row no-gutter">

      {% block portfolioBanner %}
      {% set latest_projects = collections.projects | reverse %}
      {% for project in latest_projects.slice(0,3) %}
      <div class="col-lg-4 col-sm-6">
        <a href="{{ project.url | url }}" class="portfolio-box">
          <img src="{{ project.data.projectIMG }}" class="img-responsive" alt="{{ project.data.title }}" />
          <div class="portfolio-box-caption">
            <div class="portfolio-box-caption-content">
              <div class="project-name">
                {{ project.data.title }}
              </div>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
      {% endblock portfolioBanner %}

    </div>
  </div>
</section>

